{
  "manifest_version": 3,
  "name": "YouTube Music Queue Tools",
  "version": "1.0",
  "description": "Atajos y mejoras visuales para la cola de YouTube Music",
  "permissions": ["scripting"],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
